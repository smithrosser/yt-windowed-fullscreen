{
	// required stuff
	"name": "YT Windowed Fullscreen",
	"version": "0.1",
	"manifest_version": 2,
	
	// recommended stuff
	"description": "Run YouTube videos in windowed fullscreen",
	"browser_action": {
		"default_title": "Run YouTube videos in windowed fullscreen",
		"default_popup": "popup.html"
	},

	// app intent
	"permissions": [
		"activeTab"
	]
}
